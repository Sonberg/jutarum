{{#link-to "rapport" model.id class=buttonClass}}
  <div class="row flex">
    <div class="text">
      <span class="m--title ml2">{{{model.name}}}</span>
    </div>
    <div class="columns text hide-for-small-only">
        <span class="m--under">{{team model.team}}</span>

    </div>
    <div class="text columns text-right hide-for-small-only">
    {{#each tags as |tag|}}
    <span class="m--tag">{{tag}}</span>
    {{/each}}
    </div>
    {{fa-icon "angle-right faa-horizontal m--icon mr2" pull="right"}}
  </div>
  {{/link-to}}